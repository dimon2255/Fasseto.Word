<local:BaseDialogUserControl x:Class="Fasseto.Word.DialogMessageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Fasseto.Word"
             xmlns:core="clr-namespace:Fasseto.Word.Core;assembly=Fasseto.Word.Core"
             mc:Ignorable="d">

    <StackPanel Background="{StaticResource ForegroundLightBrush}"
                d:DataContext="{x:Static core:MessageBoxDialogDesignViewModel.Instance}"
                >

        <TextBlock Text="{Binding Message}"
                   Padding="5"
                   Foreground="{StaticResource ForegroundVeryDarkBrush}"/>

        <Button Content="{Binding OkText}"
                FontSize="{StaticResource FontSizeRegular}"
                HorizontalAlignment="Center"
                Command="{Binding CloseCommand, 
                      RelativeSource={RelativeSource FindAncestor, 
                        AncestorType={x:Type local:BaseDialogUserControl}}}"
                IsDefault="True"
                IsCancel="True"/>

    </StackPanel>
</local:BaseDialogUserControl>
